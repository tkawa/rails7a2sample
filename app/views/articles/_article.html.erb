<div id="<%= dom_id article %>" class="scaffold_record">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>

  <%- unless current_page?(article) %>
  <p>
    <%= link_to "Show this article", article %>
  </p>
  <%- end %>
</div>
